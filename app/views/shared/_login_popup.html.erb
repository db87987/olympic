<div class="reveal-modal" id="myModal">
    <div class="login_pop">
        <div class="user_menu">
            Войти на сайт
        </div>

        <%= form_for('user', url: user_session_path) do |f| %>
            <p>
                <input name="user[email]" placeholder="Логин" type="text" value="">
            </p>

            <p>
                <input name="user[password]" placeholder="Пароль" type="password" value="">
            </p>

            <p class="remember_me">
                <input type="checkbox" class="checkbox" id="checkbox10" />
                <label for="checkbox10"> Чужой компьютер</label>
            </p>

            <div class="login-help">
                <a href="#">Вспомнить пароль</a>
            </div>
            <div style="clear: both;"></div>
            <p class="submit">
                <input name="commit" type="submit" value="Войти">
            </p>
            <p class="regist"><a href="/regist.html">Регистрация</a></p>
        <% end %>
    </div>

    <a class="close-reveal-modal">&#215;</a>
</div>