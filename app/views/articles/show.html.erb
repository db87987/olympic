<%= render 'shared/header' %>

<div class="container">
    <div class="breadcrumbs "> <a href="/">Главная</a> / <span>Новости</span></div>
</div>

<div class="content_news">
    <div class="container">
        <h1><%= @article.title %></h1>
        <p><%= simple_format @article.text %></p>
    </div>
</div>

<%= render 'shared/footer' %>

<div class="reveal-modal" id="myModal">
    <div class="login_pop">
        <div class="user_menu">
            Войти на сайт
        </div>

        <form method="post">
            <p>
                <input name="login" placeholder="Логин" type="text" value="">
            </p>

            <p>
                <input name="password" placeholder="Пароль" type="text" value="">
            </p>

            <p class="remember_me">
                <input type="checkbox" class="checkbox" id="checkbox10" />
                <label for="checkbox10"> Чужой компьютер</label>
            </p>

            <div class="login-help">
                <a href="#">Вспомнить пароль</a>
            </div>
            <div style="clear: both;"></div>
            <p class="submit">
                <input name="commit" type="submit" value="Войти">
            </p>
            <p class="regist"><a href="/regist.html">Регистрация</a></p>
        </form>
    </div>

    <a class="close-reveal-modal">&#215;</a>
</div>



<script type="text/javascript">
    $(document).ready(function() {
        $('#coin-slider').coinslider({
            width: 800,
            height: 520,
            navigation: true,
            delay: 5000
        });
    });
</script>